<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.DocumnetController">
   <children>
      <Label text="Manage Documents" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
     
   <HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"  styleClass="button-container">
       <Button fx:id="addBtn" text="Add new document" onAction="#adddNewDocument"/>
      <Button fx:id="updateBtn" text="Update Docuement" onAction="#updateNewDocuemnt"/>
      <Button fx:id="deleteBtn" text=" Delete document" onAction="#deleteNewDocument"/>
      <Button fx:id="displayBtn" text="Manage Reservation" onAction="#displayDocuments"/>
   </HBox>
   </children>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
